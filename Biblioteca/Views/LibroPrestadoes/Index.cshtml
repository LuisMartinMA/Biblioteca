@model IEnumerable<Biblioteca.Models.LibroPrestado>

@{
    ViewBag.Title = "Create";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    <p>
        @Html.ActionLink("Create New", "Create")
    </p>
    <table class="table">
        <tr>

            <th>
                @Html.DisplayNameFor(model => model.Lector.Nombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Libro.Nombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PrestamoID)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>

                <td>
                    @Html.DisplayFor(modelItem => item.Lector.Nombre)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Libro.Nombre)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PrestamoID)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.PrestamoID }) |
                    @Html.ActionLink("Details", "Details", new { id = item.PrestamoID }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.PrestamoID })
                </td>
            </tr>
        }

    </table>
</body>
</html>
